number = {7757},
pages = {551--555},
title = {{Industrial-era decline in subarctic Atlantic productivity}},
url = {https://doi.org/10.1038/s41586-019-1181-8},
volume = {569},
year = {2019},
bibtex_show={true},
selected={true},
pdf={Osman_2019_Nature_compressed.pdf},
