month = {sep},
number = {9},
pages = {e2021JC017205},
publisher = {John Wiley & Sons, Ltd},
title = {{Marine Aerosol Records of Arctic Sea-Ice and Polynya Variability From New Ellesmere and Devon Island Firn Cores, Nunavut, Canada}},
